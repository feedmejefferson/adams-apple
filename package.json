{
  "private": true,
  "name": "adams-apple",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "preact build --no-prerender --lifeCycle=local && npm run -s serve:all",
    "start:development": "npm run -s dev",
    "build": "preact build --no-prerender",
    "build:feedme-local": "preact build --no-prerender --lifeCycle=local --theme=feedme-jefferson",
    "build:feedme-github": "preact build --no-prerender --lifeCycle=github --theme=feedme-jefferson",
    "build:karen-local": "preact build --no-prerender --lifeCycle=local --theme=karens-kitchen",
    "build:karen-firebase": "preact build --no-prerender --theme=karens-kitchen",
    "serve:all": "npm-run-all -p -r serve:site serve:assets",
    "serve:site": "http-server build",
    "serve:assets": "http-server -p 8081 --cors remote-assets",
    "dev": "preact watch --sw false",
    "lint": "tslint --project .",
    "test": "jest ./tests",
    "test:watch": "jest ./tests --watch",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,css,md,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-aerian"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/webpack-env": "^1.13.9",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^1.0.1",
    "dotenv-webpack": "^1.7.0",
    "firebase-tools": "^7.0.0",
    "http-server": "^0.11.1",
    "husky": "^1.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-next.19",
    "preact-render-spy": "^1.3.0",
    "prettier": "^1.15.3",
    "ts-jest": "^24.1.0",
    "ts-loader": "^3.5.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-consistent-codestyle": "^1.14.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.1",
    "typings-for-css-modules-loader": "^1.7.0",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "dependencies": {
    "@feedmejefferson/feedme-trees": "0.0.1",
    "preact": "^8.5.2",
    "preact-compat": "^3.18.4",
    "preact-render-to-string": "^4.1.0",
    "preact-router": "^2.6.1",
    "unissist": "^1.4.0",
    "unistore": "^3.4.1"
  },
  "peerDependencies": {
    "prettier": ">1.0.0",
    "tslint": ">5.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true,
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__/browserMocks.js"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)(spec|test).[jt]s?(x)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^./style$": "identity-obj-proxy",
      "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "^create-react-class$": "preact-compat/lib/create-react-class",
      "^react-addons-css-transition-group$": "preact-css-transition-group",
      "^theme/(.*)": "<rootDir>/src/themes/adams-apple/$1"
    }
  }
}
